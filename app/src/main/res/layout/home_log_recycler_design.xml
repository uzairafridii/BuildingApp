<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/buildingCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8"
        app:cardElevation="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_4"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"

            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/logImage"
                android:src="@drawable/circle"
                android:layout_marginLeft="@dimen/margin_4"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logName"
                android:text="Name of building"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/margin_12"
                android:drawableRight="@drawable/location_building"
                android:drawablePadding="@dimen/margin_6"
                android:layout_toRightOf="@+id/logImage"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/distanceText"
                android:text="Distance : "
                android:textColor="@color/textColor"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_below="@id/logName"
                android:layout_toRightOf="@+id/logImage"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logDistance"
                android:text="Distance"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/logName"
                android:layout_toRightOf="@id/distanceText"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/forwardBtnInLog"
                android:background="@null"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_6"
                android:layout_marginRight="@dimen/margin_16"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>